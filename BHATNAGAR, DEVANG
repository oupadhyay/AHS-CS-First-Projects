#Devang Bhatnagar

#This function adds two numbers
def addition(num1, num2):
    return str(num1+num2)
#This function subtracts two numbers
def subtraction(num1, num2):
    return str(num1-num2)
#This function multiplies two numbers
def multiplication(num1, num2):
    return str(num1*num2)
#This function divides two numbers
def division(num1, num2):
    return str(num1/num2)
#This function runs by default
def main():
    num1 = int(input("Enter one number     "))
    num2 = int(input("Enter a second number     "))
    operator = int(input("Enter 1 for addition, 2 for subtraction, 3 for multiplication, or something else for divison     "))
    if operator==1:
        print("The sum is "+addition(num1, num2))
    elif operator==2:
        print("The difference is "+subtraction(num1, num2))
    elif operator==3:
        print("The product is "+multiplication(num1, num2))
    else:
        print("The quotient is "+division(num1, num2))
main()
